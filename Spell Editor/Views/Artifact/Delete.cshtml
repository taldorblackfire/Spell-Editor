@model Spell_Editor.Models.Artifact_Table

@{
    ViewBag.Title = "Delete Artifact";
}

<h2>Delete Artifact</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Artifact Information</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(model => model.Name)</dt>

        <dd>@Html.DisplayFor(model => model.Name)</dd>

        <dt>@Html.DisplayNameFor(model => model.Reach)</dt>

        <dd>@Html.DisplayFor(model => model.Reach)</dd>

        <dt>@Html.DisplayNameFor(model => model.Mana)</dt>

        <dd>@Html.DisplayFor(model => model.Mana)</dd>

        <dt>@Html.DisplayNameFor(model => model.Path)</dt>

        <dd>@Html.DisplayFor(model => model.Path)</dd>

        <dt>Merit Dots</dt>

        <dd>@Html.DisplayFor(model => model.Cost)</dd>

        <dt>@Html.DisplayNameFor(model => model.Gnosis)</dt>

        <dd>@Html.DisplayFor(model => model.Gnosis)</dd>

        <dt>Owned By</dt>

        <dd>@Html.DisplayFor(model => model.Character_List.name)</dd>

        <dt>@Html.DisplayNameFor(model => model.Description)</dt>

        <dd style="margin: 0 0;">
            <textarea id="Description" name="Description" rows="10" style="max-width: 1150px; border: none; text-align: justify;" readonly="readonly" cols="180">@Model.Description</textarea>
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>

@section Scripts {
    <script type="text/javascript">
        $("#Description").height($("#Description")[0].scrollHeight);
    </script>
}
