@model IEnumerable<Spell_Editor.Models.FetishTable>

@{
    ViewBag.Title = "Fetish/Talens";
}

<h2>Fetish/Talens</h2>

<p>@Html.ActionLink("Create New Fetish/Talen", "Create")</p>
<table id="FetishTable" class="webgrid-table">
    <thead>
        <tr class="webgrid-header">
            <th>Name</th>
            <th>Rating</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            string name = item.Name;

            if (item.Talen)
            {
                name = name + " (Talen)";
            }

            <tr class="webgrid-row-style">
                <td>@name</td>
                <td>@item.Rating</td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script type="text/javascript">
        var table = $('#FetishTable').DataTable({
            deferRender: true,
            scroller: true,
            scrollY: "233px",
            processing: true
        });
    </script>
}
