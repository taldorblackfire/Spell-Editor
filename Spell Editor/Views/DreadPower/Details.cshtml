@model Spell_Editor.Models.DreadPower

@{
    ViewBag.Title = "Dread Power Details";
}

<h2>@Model.Name</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dd style="margin: 0 0;">
            <textarea id="Effect" name="Effect" rows="12" class="form-control" readonly="readonly" cols="80">@Model.Effect</textarea>
        </dd>
    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ID }) |
    <a href="javascript:void(0);" onclick="history.go(-1);">Back to List</a>
</p>

@section Scripts {
    <script type="text/javascript">
        $("#Effect").height($("#Effect")[0].scrollHeight);
    </script>
}
