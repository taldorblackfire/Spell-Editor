@model Spell_Editor.Models.ImbuedViewModel

@{
    ViewBag.Title = "Imbued Item Details";
}

<h2 style="text-align: center;">Imbued Item Details</h2>

<h4 style="text-align: center;">@Model.ImbuedInfo.Name</h4>
<hr />
<div class="col-md-6">
    <div class="form-horizontal">
        <div class="form-group">
            <label class="control-label col-md-5">Highest Spell Level</label>
            <div class="col-md-7">
                @Html.EditorFor(model => model.ImbuedInfo.Spell_Level, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly", @style = "background-color: white;" } })
            </div>

            <label class="control-label col-md-5">Mana Battery Dots</label>
            <div class="col-md-7">
                @Html.EditorFor(model => model.ImbuedInfo.Battery_Dots, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly", @style = "background-color: white;" } })
            </div>

            <label class="control-label col-md-5">Cost</label>
            <div class="col-md-7">
                @Html.EditorFor(model => model.ImbuedInfo.Cost, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly", @style = "background-color: white;" } })
            </div>

            <label class="control-label col-md-5">Mana</label>
            <div class="col-md-7">
                @Html.EditorFor(model => model.ImbuedInfo.Mana, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly", @style = "background-color: white;" } })
            </div>
        </div>

        <div class="form-group">
            <label style="text-align: center; width: 100%;">Description</label>
            <hr />
            <div class="col-md-12">
                <textarea id="Description" name="Description" class="form-control" readonly="readonly" cols="80" rows="12">@Model.ImbuedInfo.Description</textarea>
            </div>
        </div>

        <h4 style="text-align: center;">Spells</h4>
        <div class="form-group" id="spellInfo">
            @foreach (var item in Model.Spells)
            {
                Html.RenderPartial("_ItemSpellDetails", item);
            }
        </div>

        <div class="row">
            <p>
                @Html.ActionLink("Edit", "Edit", new { id = Model.ImbuedInfo.ID }) |
                @Html.ActionLink("Back to List", "Index")
            </p>
        </div>
    </div>
</div>
<div class="col-md-6">
    <h4 style="text-align: center;">Item Enhancements</h4>
    <div class="form-group" id="itemEnhancementInfo">
        @foreach (var item in Model.ItemEnhancement)
        {
            Html.RenderPartial("_ItemEnhancementDetails", item);
        }
    </div>
</div>

<div class="row"></div>

@section Scripts {
    <script type="text/javascript">
        $("#Description").height($("#Description")[0].scrollHeight);
    </script>
}
