@model Spell_Editor.Models.Condition

@{
    ViewBag.Title = "Condition Details";
}

<h2 style="text-align: center;">Condition Details</h2>

<div class="form-horizontal">
    <h4 style="text-align: center;">@Model.Name</h4>
    <hr />

    <div class="col-md-6" style="text-align: center;">
        <div class="form-group">
            <label style="text-align: center;">Effect</label>
            <hr />
            <div class="col-md-12">
                <textarea id="Effect" name="Effect" rows="7" style="max-width: 100%; border: none; text-align: justify;" readonly="readonly" cols="80">@Model.Effect</textarea>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="form-group">
            <label style="text-align: center; width: 100%;">Beat</label>
            <hr />
            <div class="col-md-12">
                <textarea id="Beat" name="Beat" rows="2" style="max-width: 100%; border: none; text-align: justify;" readonly="readonly" cols="80">@Model.Beat</textarea>
            </div>
        </div>

        <div class="form-group">
            <label style="text-align: center; width: 100%;">Resolution</label>
            <hr />
            <div class="col-md-12">
                <textarea id="Beat" name="Resolution" rows="2" style="max-width: 100%; border: none; text-align: justify;" readonly="readonly" cols="80">@Model.Beat</textarea>
            </div>
        </div>
    </div>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ID }) |
    @Html.ActionLink("Back to List", "Index")
</p>

@section Scripts {
    <script type="text/javascript">
        $("#Resolution").height($("#Resolution")[0].scrollHeight);
        $("#Beat").height($("#Beat")[0].scrollHeight);
        $("#Effect").height($("#Effect")[0].scrollHeight);
    </script>
}
