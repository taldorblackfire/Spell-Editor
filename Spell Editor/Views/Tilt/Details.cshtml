@model Spell_Editor.Models.Tilt

@{
    ViewBag.Title = "Tilt Details";
}

<h2 style="text-align: center;">Tilt Details</h2>

<div class="form-horizontal">
    <h4 style="text-align: center;">@Model.Name (@Model.Type)</h4>
    <hr />

    <div class="col-md-6">
        <div class="form-group">
            <label style="width: 100%; text-align: center;">Description</label>
            <hr/>
            <div class="col-md-12">
                <textarea id="Description" name="Description" rows="6" style="max-width: 100%; border: none; text-align: justify;" readonly="readonly" cols="80">@Model.Description</textarea>
            </div>
        </div>

        <div class="form-group">
            <label style="width: 100%; text-align: center;">Cause</label>
            <hr />
            <div class="col-md-12">
                <textarea id="Cause" name="Cause" rows="6" style="max-width: 100%; border: none; text-align: justify;" readonly="readonly" cols="80">@Model.Cause</textarea>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="form-group">
            <label style="width: 100%; text-align: center;">Effect</label>
            <hr />
            <div class="col-md-12">
                <textarea id="Effect" name="Effect" rows="6" style="max-width: 100%; border: none; text-align: justify;" readonly="readonly" cols="80">@Model.Effect</textarea>
            </div>
        </div>

        <div class="form-group">
            <label style="width: 100%; text-align: center;">Resolution</label>
            <hr />
            <div class="col-md-12">
                <textarea id="Resolution" name="Resolution" rows="6" style="max-width: 100%; border: none; text-align: justify;" readonly="readonly" cols="80">@Model.Resolution</textarea>
            </div>
        </div>
    </div>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ID }) |
    @Html.ActionLink("Back to List", "Index")
</p>

@section Scripts {
    <script type="text/javascript">
        $("#Resolution").height($("#Resolution")[0].scrollHeight);
        $("#Cause").height($("#Cause")[0].scrollHeight);
        $("#Effect").height($("#Effect")[0].scrollHeight);
        $("#Description").height($("#Description")[0].scrollHeight);
    </script>
}
